# EmotiBuild Environment Variables
# Copy this file to .env.local and fill in your actual values

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=EmotiBuild
NEXT_PUBLIC_APP_DESCRIPTION="Build resilience, one emotion at a time"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Privy Configuration (Web3 Authentication)
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# Farcaster/Neynar Configuration
NEXT_PUBLIC_NEYNAR_API_KEY=your_neynar_api_key
NEYNAR_API_SECRET=your_neynar_api_secret

# OnchainKit Configuration (Base)
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key
NEXT_PUBLIC_CDP_PROJECT_ID=your_cdp_project_id

# OpenAI Configuration (Optional - for future AI features)
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION_ID=your_openai_org_id

# Anthropic Configuration (Optional - alternative to OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_google_analytics_id
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Security
NEXTAUTH_SECRET=your_nextauth_secret
NEXTAUTH_URL=http://localhost:3000

# Rate Limiting (Optional)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Email Service (Optional - for notifications)
RESEND_API_KEY=your_resend_api_key
SMTP_FROM=noreply@emotibuild.app

# Webhook Secrets
SUPABASE_WEBHOOK_SECRET=your_supabase_webhook_secret
PRIVY_WEBHOOK_SECRET=your_privy_webhook_secret

# Development/Production Flags
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_DEBUG=true

# SEO and Social
GOOGLE_VERIFICATION_CODE=your_google_verification_code
NEXT_PUBLIC_TWITTER_HANDLE=@emotibuild

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_AI_FEATURES=false
NEXT_PUBLIC_ENABLE_PREMIUM_FEATURES=true
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true

# API Rate Limits
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=900000

# Database Configuration (if using custom database)
DATABASE_URL=your_database_connection_string
DATABASE_POOL_SIZE=10

# Storage Configuration (if using custom storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# CDN Configuration (Optional)
NEXT_PUBLIC_CDN_URL=your_cdn_url

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Caching
REDIS_URL=your_redis_connection_string
CACHE_TTL=3600

# Backup and Recovery
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Compliance and Privacy
PRIVACY_POLICY_URL=https://emotibuild.app/privacy
TERMS_OF_SERVICE_URL=https://emotibuild.app/terms
COOKIE_CONSENT_REQUIRED=true

# Localization (Future)
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,es,fr,de

# Performance Monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=false
PERFORMANCE_SAMPLE_RATE=0.1

# Content Security Policy
CSP_REPORT_URI=https://your-csp-report-endpoint.com/report

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://emotibuild.app
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Session Configuration
SESSION_TIMEOUT=86400000
SESSION_COOKIE_NAME=emotibuild-session
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true

# API Versioning
API_VERSION=v1
API_BASE_PATH=/api/v1

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="EmotiBuild is currently under maintenance. Please check back soon."

# Feature Rollout
FEATURE_ROLLOUT_PERCENTAGE=100
BETA_FEATURES_ENABLED=false

# Third-party Integrations
ZAPIER_WEBHOOK_URL=your_zapier_webhook_url
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Development Tools
NEXT_PUBLIC_STORYBOOK_ENABLED=false
NEXT_PUBLIC_DEVTOOLS_ENABLED=true
HOT_RELOAD_ENABLED=true

# Testing Configuration
TEST_DATABASE_URL=your_test_database_url
TEST_SUPABASE_URL=your_test_supabase_url
TEST_SUPABASE_ANON_KEY=your_test_supabase_anon_key

# Build Configuration
BUILD_ANALYZE=false
BUILD_STANDALONE=false
BUILD_OUTPUT=standalone

# Deployment Configuration
DEPLOYMENT_ENVIRONMENT=development
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_BRANCH=main

# Custom Domain Configuration
CUSTOM_DOMAIN=emotibuild.app
SSL_CERTIFICATE_ARN=your_ssl_certificate_arn

# Load Balancer Configuration
LOAD_BALANCER_HEALTH_CHECK_PATH=/api/health
LOAD_BALANCER_TIMEOUT=30

# Auto-scaling Configuration
MIN_INSTANCES=1
MAX_INSTANCES=10
TARGET_CPU_UTILIZATION=70

# Backup Configuration
AUTOMATED_BACKUPS=true
BACKUP_ENCRYPTION=true
CROSS_REGION_BACKUP=false
