# Environment Configuration for EmotiBuild Base Mini App

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Privy Configuration (Web3 Authentication)
NEXT_PUBLIC_PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret

# Neynar Configuration (Farcaster Integration)
NEXT_PUBLIC_NEYNAR_API_KEY=your_neynar_api_key
NEYNAR_API_SECRET=your_neynar_api_secret

# OnchainKit Configuration
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key

# Base Network Configuration
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_RPC_URL=https://mainnet.base.org

# Redis Configuration (for caching)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=EmotiBuild
NEXT_PUBLIC_APP_DESCRIPTION="Build resilience, one emotion at a time"

# Feature Flags
NEXT_PUBLIC_ENABLE_PREMIUM_FEATURES=true
NEXT_PUBLIC_ENABLE_FARCASTER_INTEGRATION=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Development
NODE_ENV=development
